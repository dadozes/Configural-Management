// Конфигурация игры - пример 2
define base_health 100
define base_damage 25

(
    game_name: q(Space Adventure);
    version: q(1.0.0);
    
    player: (
        health: $base_health 50 +$;  // 150
        damage: $base_damage$;
        inventory_size: 20;
    );
    
    enemies: (
        count: 10;
        health: $base_health$;
        damage: $base_damage 5 -$;  // 20
    );
    
    world: (
        size: q(1000x1000);
        gravity: 9.8;
        weather_effects: true;
    );
)
