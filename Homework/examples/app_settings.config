// Конфигурация приложения - пример 3
define default_timeout 30
define max_file_size 10485760

(
    app_name: q(My Application);
    version: q(2.1.0);
    developer: q(Your Name);
    
    settings: (
        theme: q(dark);
        language: q(ru);
        auto_save: true;
        check_updates: true;
    );
    
    limits: (
        max_file_size: $max_file_size$;
        timeout: $default_timeout$;
        max_memory: 268435456;
    );
    
    features: (
        experimental: false;
        analytics: true;
        crash_reports: true;
    );
)
